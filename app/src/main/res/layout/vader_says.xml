<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgrdeathstar"
    android:soundEffectsEnabled="false"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:src="@drawable/vaderbanner2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ibChewbie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/chewbieof" />

                <ImageView
                    android:id="@+id/ibR2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/r2off" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ibSaber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/lightsaberoff" />

                <ImageView
                    android:id="@+id/ibBlaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:soundEffectsEnabled="false"
                    android:src="@drawable/blasterof" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="126dp"
            android:layout_centerInParent="true">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/ibPlay"
                android:layout_width="99dp"
                android:layout_height="105dp"
                android:layout_marginTop="208dp"
                android:background="@android:color/transparent"
                android:soundEffectsEnabled="false"
                android:src="@drawable/playvader2" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutPunts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvPuntuacio"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:fontFamily="@font/jedifont"
        android:text="Puntos"
        android:textAlignment="center"
        android:textColor="#d5d900"
        android:textSize="55dp" />

    <TextView
        android:id="@+id/tvPuntos"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/jedifont"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#d5d900"
        android:textSize="55dp" />
</LinearLayout>

